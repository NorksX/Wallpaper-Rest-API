@model Proekt_IT.Models.Wallpaper

@{
    ViewBag.Title = "Wallpaper Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #e9ecef;
            color: #343a40;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            margin-bottom: 30px;
            overflow: hidden;
        }

        .card-img-top {
            width: 100%;
            height: 400px;
            object-fit: cover;
        }

        .card-title {
            font-size: 28px;
            margin-bottom: 10px;
        }

        .card-subtitle {
            font-size: 20px;
            color: #6c757d;
            margin-bottom: 15px;
        }

        .card-text {
            font-size: 18px;
            margin-bottom: 15px;
        }

            .card-text a {
                color: #007bff;
                text-decoration: none;
            }

                .card-text a:hover {
                    text-decoration: underline;
                }

        .btn {
            padding: 12px 25px;
            font-size: 18px;
            font-weight: bold;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-secondary {
            background-color: #6c757d;
            color: #fff;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto">

                <div class="card">
                    <img src="@Model.ImageUrl" class="card-img-top" alt="Wallpaper Image">
                    <div class="card-body">

                        <h2 class="card-title">ID: @Model.Id</h2>
                        <h5 class="card-subtitle">Author: @Model.Creator</h5>
                        <p class="card-text">
                            <strong>Image Originally From:</strong>
                            @if (string.IsNullOrEmpty(Model.OriginalSource))
                            {
                                <span>Unknown</span>
                            }
                            else
                            {
                                <a href="@Model.OriginalSource" target="_blank">@Model.OriginalSource</a>
                            }
                        </p>
                        <div class="mt-4">
                            <a href="javascript:history.back()" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
